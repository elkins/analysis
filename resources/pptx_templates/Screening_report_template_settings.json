        "font": {
            "family": "Helvetica",
            "size": 6
        },
        "spectrum_line": {
            "linewidth": 0.5
        },
        "tick_params": {
            "axis": "x",
            "labelsize": 4,
            "width": 0.5
        },
        "xlabel": {
            "xlabel": "[ppm]",
            "fontsize": 4,
            "ha": "right",
            "x": 1.0,
            "labelpad": -15
